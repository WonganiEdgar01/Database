<%- include('partials/header') %>

    <article class="full-post">
        <h2><%= post.title %></h2>
        
        <p class="post-meta">
            <i class="far fa-calendar"></i> 
            <% if (post.createdAt) { %>
                Shared on <%= new Date(post.createdAt).toDateString() %>
            <% } else { %>
                Recently shared
            <% } %>
        </p>
        
        <% if (post.image && post.image !== 'default.jpg') { %>
        <div class="post-image">
            <img src="/images/<%= post.image %>" alt="<%= post.title %>">
        </div>
        <% } %>
        
        <div class="post-content">
            <%- post.content %>
        </div>
        
        <div class="post-actions">
            <a href="/" class="btn secondary">
                <i class="fas fa-arrow-left"></i> Back to All Experiences
            </a>
            <a href="/posts/<%= post.id %>/edit" class="btn primary">
                <i class="fas fa-edit"></i> Edit This Experience
            </a>
            <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" class="delete-form">
                <button type="submit" class="btn danger" onclick="return confirm('Are you sure you want to delete this experience? This cannot be undone.')">
                    <i class="fas fa-trash"></i> Delete Experience
                </button>
            </form>
        </div>
    </article>

<%- include('partials/footer') %>